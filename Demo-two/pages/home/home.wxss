/**index.wxss**/
@import "../common/lib/weui.wxss";
.home-page{
    padding: 20%;
}
.input-style{
    border: 1rpx solid #ffab27
}
.weui-cells::after{
    content: "";
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1rpx solid #ffab27;
    color: #D9D9D9;
}
.btn-area{
    margin-top: 70rpx;
}
button-hover[type="primary"]{
    background-color: #996600;
}
.home-body{
    margin-top: 55rpx;
}
button[type="primary"]{
     color: #000000;
     background-color: #ffab27;
 }
.button-hover[type="primary"]{
     color: #000000;
     background-color: #996600;
 }
.home-footer{
    display: flex;
    justify-content: center;
}
#locationName,#destinationName{
    background-color: #ffffff;
    border-color: #ffab27;
    font-size: 37rpx;
    width: 130%;
    text-align: center;
    margin-left: -15%;
}
.btn::after{
    border: 1px solid rgba(0,0,0,0);
}
.head-btn{
    width: 80px;
    height: 60px;
    margin-top: -20%;
    margin-left: -34%;
}
/*.user-number{
    position: fixed;
    margin-top: 60%;
    margin-left: -9%;
}*/
@media(max-width: 320px){
    .head-btn{
        width: 38%;
    }
    .user-number{
        position: fixed;
        margin-top: 35%;
        margin-left: -9%;
        font-size: 18px;
    }
}
@media(min-width: 321px){
    .user-number{
        position: fixed;
        margin-top: 48%;
        margin-left: -9%;
         font-size: 21px;
    }
}
@media(min-width: 376px){
    .user-number{
        position: fixed;
        margin-top: 58%;
        margin-left: -9%;
        font-size: 25px;
    }
    .line{
        display: inline-block;
        width: 68%;
        height: 1rpx;
        background-color: #000;
        margin-top: 9%;
    }
}

.drawer-screen{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.2;
    overflow: hidden;
    z-index: 1000;
    color: #fff;
}
.drawer-attr-box{
    height: 100%;
    width: 70%;
    overflow: hidden;
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 2000;
    background: #fff;
}
.drawer-attr-contnet{
    text-align: center;
}
.content-align{
    text-align: center;
}
.drawer-image{
    width: 131rpx;
    height: 120rpx;
    margin-top: 10%;
}
.drawer-desc{
    font-size: 35rpx;
    margin: 30rpx;
}
.btn{
    width: 80%;
    padding: 15rpx 0;
    border-radius: 10rpx;
    text-align: center;
}
.open-btn{
    margin: 40rpx 10%;
    border-radius: 10rpx;
    background: #20bb21;
    color: #fff;

}
page{
    font-family: "Microsoft YaHei";
}
.line{
    display: inline-block;
    width: 68%;
    height: 1rpx;
    background-color: #000;
    margin-top: 1%;
}
.rule{
    margin-top: 30%;
}
@media(max-height: 736px){
    .line{
        display: inline-block;
        width: 68%;
        height: 1rpx;
        background-color: #000;
        margin-top: 5%;
    }

}

.phone{
  width: 147rpx;
  height: 31rpx;
  position: absolute;
  top: 96%;
  left: 37%;
}
.title{
  text-align: center;
  padding-bottom: 15%;
  font-size: 45rpx;
}
.des-btn{
  margin-top: 50rpx;
}
#makeCall{
  width: 130%;
  margin-left: -15%;
}
